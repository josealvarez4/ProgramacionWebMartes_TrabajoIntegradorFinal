<!-- NOTICIAS -->
<div class="noticias" style="margin: 3% 10%;">
    <div class="container text-center" style=" {{#if vernoticia}} display: none; {{/if}}">
        <div class="row">
            {{#each noticias}}
            <div class="col-lg-4 col-md-6 col-sm-12" style="padding: 1.5%;">
                <div class="card" id="{{id}}" style="border: none;">
                    <img src="{{imagen}}" class="card-img-top" alt="..." style="aspect-ratio: 1.3;">
                    <div class="card-body">
                        <h5 class="card-title">{{titulo}}</h5>
                        <p class="card-text">{{subtitulo}}</p>
                        <a href="/noticias/noticia/{{id}}" class="btn btn-primary">Leer...</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <div class="row" style=" {{#unless vernoticia}} display: none; {{/unless}}">
        <div>
            <h1>{{noticia.titulo}}</h1>
        </div>
        <div class="col-lg-8 col-md-12" style="padding-right: 3%;">
            <div>
                <img src="{{imagen}}" alt="" width="100%" style="margin-bottom: 4%;">
            </div>
            <div>
                <h4 style="margin-bottom: 4%;">{{noticia.subtitulo}}</h3>
            </div>
            <div>
                <p>{{noticia.cuerpo}}</p>
            </div>
        </div>
        <div class="col-lg-4 col-md-12" style="padding: 1%;">
            <p>MAS RECIENTES</p>
            <hr>
            {{#each noticias}}
                <div class="row" style="margin-bottom: 10%;">
                    <div class="col-4">
                        <a href=""><img src="{{imagen}}" alt="" width="100%"></a>
                    </div>
                    <div class="col-8">
                        <a href="/noticias/noticia/{{id}}" class="noticialink" style="text-decoration: none;"><p>{{titulo}}</p></a>                        
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>