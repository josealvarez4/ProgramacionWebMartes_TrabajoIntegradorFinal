<div class="container">
<div class="row">
    <div class="col text-center" style="padding: 1% 30%;">
        <div style="padding: 1% 30%;">
            <ion-icon name="person-circle-outline" style="color: red; font-size: 1000%;"></ion-icon>
        </div>
        <form action="/admin/login" method="post">
            <div class="form-group">
                <label for="usuario">Usuario</label>
                <input type="text" class="form-control" id="usuario" aria-describedby="emailHelp" name="usuario">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 2%;">Enviar</button>
        </form>
        {{#if error}}
        <p>Usuario o contrase√±a incorrecto</p>
        {{/if}}
    </div>
</div>
</div>