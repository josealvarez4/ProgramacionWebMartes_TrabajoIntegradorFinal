                    </div>
                    <div class="col-3">Puntos<input type="text" class="form-control" placeholder="Puntos" name="puntos">
                    </div>
                </div>
                <div class="row">
                    <div class="col text-left">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                    <div class="col text-end">
                        <a href="../tablas"><button type="button" class="btn btn-primary">Volver</button></a>
                    </div>
                </div>
            </form>
            {{#if error}}
            <h5 style="text-align: center;">{{message}}</h5>
            {{/if}}
        </div>
    </div>
    {{/if}}
    {{#if mostrarfutbol}}
    <div class="row" style="margin: auto 15%;">
        <div class="col-8 offset-2">
            <h4 style="margin-bottom: 4%; text-align: center;">Agregar Equipo</h4>
            <form action="/admin/tablas/agregarfutbol" method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="mb-3 text-center">
