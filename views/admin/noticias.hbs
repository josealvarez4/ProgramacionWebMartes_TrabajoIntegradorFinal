<div class="container" style="margin-top: 1%;">
    <div class="row">
        <div class="col text-center">
            <h2>Listado de Noticias</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-6 col-sm-12" style="margin-top: 1%;">
            <form class="d-flex" role="search">
                <input class="form-control me-2 buscar" type="search" placeholder="Buscar..." aria-label="Search" name="q" 
                {{#if q}} value="{{q}}" {{/if}}>
                <button class="btn btn-outline-success bbuscar" type="submit">
                    <i class="fa fa-search"></i></button>
            </form>
        </div>
        <div class="col-lg-8 col-md-6 col-sm-12" style="text-align: right; margin-top: 1%;">
            <a href="/admin/noticias/agregar" class="btn btn-success" style="font-size: small;"><i
                    class="fas fa-plus">Nuevo</i></a>
        </div>
    </div>

    <table class="table" style="margin-top: 1%;">
        <thead>
            <tr class="table-dark">
                <th scope="col">#</th>
                <th scope="col">Titulo</th>
                <th scope="col">Imagen</th>
                <th scope="col" class="text-end">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each noticias}}
            <tr>
                <th scope="row">{{id}}</th>
                <td>{{titulo}}</td>
                <td>{{{imagen}}}</td>
                <td class="text-end">
                    <a href="/admin/noticias/modificar/{{id}}" class="btn btn-secondary"><i
                            class="fas fa-pencil-alt"></i></a>
                    <a href="/admin/noticias/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{#if is_search}}
        {{#unless noticias.length}}
            No se encontraron resultados para "<strong>{{q}}</strong>"
        {{/unless}}
    {{/if}}
</div>